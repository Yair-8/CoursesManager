<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/recet-styles.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
    <link rel="stylesheet" href="/stylesheets/footer.css" />
    <script src="/javascripts/RequestManager.js"></script>

    <title><%=title%></title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('sections/header', {title: 'Student form'}) %>
      <main class="page">
        <div class="container">
          <h1><%=title%></h1>
          <!-- Table Section -->
          <section class="user-list">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Average score</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student => { %>
                <tr>
                  <td><%= student.name %></td>
                  <td><%= student.age %></td>
                  <td><%= student.averageScore %></td>
                  <td>
                    <a href="/students/register/<%= student._id %>">Edit</a>
                    <button
                      onclick="RequestManager.deleteRequest('/students', '<%= student._id %>')"
                    >
                      Delete
                    </button>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          <a href="/students/register" class="add-user-btn">Add student</a>
        </div>
      </main>
      <%- include('sections/footer', {title: 'footer'}) %>
    </div>
  </body>
</html>
